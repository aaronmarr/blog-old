---
layout: layouts/base.njk
templateClass: template-post
---
<article>
  <header class="[ topo ] [ pt-8 pb-8 ]">
    <div class="[ banner ] [ py-2 max-w-xl m-auto px-4 ]">
      <h2 class="[ banner__headline ] [ font-bold tracking-tight font-serif leading-tight text-2xl sm:text-2xl md:text-3xl tracking-tight mt-0 mb-2 ]">{{ title }}</h2>
      <time class="[ banner__strapline ] [ font-sans text-sm ]" datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
    </div>
  </header>
  <div{% if templateClass %} class="[ typeset {{ templateClass }} ] [ pb-12 max-w-xl m-auto px-4 pt-8 ]"{% endif %}>
    {{ content | safe }}
  </div>
</article>


