---
layout: layouts/base.njk
templateClass: template-post
---
<article>
  <header class="border-t border-dotted pt-8 pb-4">
    <div class="[ banner ] [ py-2 max-w-xl ml-auto mr-auto ]">
      <h2 class="[ banner__headline ] [ font-bold font-sans leading-tight text-2xl md:text-3xl tracking-tight mt-0 mb-2 ]">{{ title }}</h2>
      <time class="[ banner__strapline ] [ font-sans text-sm ]" datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
    </div>
  </header>
  <div{% if templateClass %} class="[ typeset {{ templateClass }} ] [ max-w-xl ml-auto mr-auto ]"{% endif %}>
  {{ content | safe }}
  </div>
</article>


