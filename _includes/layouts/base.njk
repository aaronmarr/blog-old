<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="stylesheet" href="https://necolas.github.io/normalize.css/8.0.1/normalize.css">
    <link type="text/css" rel="stylesheet" href="{{ '/build/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/build/prism-base16-monokai.dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <!-- <link rel="stylesheet" href="//basehold.it/10">     -->
  </head>
  <body class="line-numbers">
    <header class="header">
      <div class="header__content">
        <h1 class="site-name">
          <a class="site-name__link" href="{{ '/' | url }}">
            {{ metadata.title }}
          </a>
        </h1>
        <nav class="nav">
          <ul class="nav__list">
            {%- for nav in collections.nav | reverse -%}
            <li class="nav__item{% if nav.url == page.url %} nav__item--active{% endif %}">
              <a class="nav__link" href="{{ nav.url | url }}">
                {{ nav.data.navtitle }}
              </a>
            </li>
            {%- endfor -%}
          </ul>
        </nav>
      </div>
    </header>

    <main{% if templateClass %} class="main typeset {{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>

    <footer class="footer">
      <div class="footer__content">
        <p>&copy Aaron Marr 2019</p>
      </div>
    </footer>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
